@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <form asp-controller="StartUp" asp-action="Login">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                <h3 class="mb-5">Sign in</h3>
                                <div class="form-outline mb-4">
                                    <input asp-for="CPF" type="text" id="login-cpf" class="form-control form-control-lg" />
                                    <label asp-for="CPF" class="form-label">@Html.DisplayNameFor(model => model.CPF)</></label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Password" type="password" id="login-password" class="form-control form-control-lg" />
                                    <label asp-for="Password" class="form-label">@Html.DisplayNameFor(model => model.Password)</></label>
                                </div>
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                                <hr class="my-4">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>